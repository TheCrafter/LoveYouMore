<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heartMusic_img"
        android:src="@drawable/heart"
        android:clickable="true"
        android:onClick="onMusicHeartClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heartText_img"
        android:src="@drawable/heart"
        android:clickable="true"
        android:onClick="onTextHeartClick"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/heartMusic_img"
        android:layout_alignStart="@+id/heartMusic_img"
        android:layout_marginTop="110dp" />

</RelativeLayout>

